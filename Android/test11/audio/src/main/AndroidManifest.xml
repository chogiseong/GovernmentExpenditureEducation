<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0" package="android.media">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Main"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- //////////////////////////////////////////////////////////////
                                  Audio
        //////////////////////////////////////////////////////////////-->
        <activity android:name="android.media.audio.AudioRecordActivity" 
            android:label="Audio/Audio record"
            android:screenOrientation="portrait">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>
        <activity android:name="android.media.audio.AudioRecorderActivity2" 
            android:label="Audio/Sound level"
            android:screenOrientation="portrait">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>

        <activity android:name="android.media.audio.SpeechActivity" 
            android:label="Audio/Speech"
            android:screenOrientation="portrait">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>

        <activity android:name="android.media.audio.AudioTrackActivity"
            android:theme="@style/AppTheme"
            android:label="Audio Track/1.AudioTrack"
            android:screenOrientation="portrait">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>

        <activity android:name="android.media.audio.AudioTrackLoopActivity"
            android:theme="@style/AppTheme"
            android:label="Audio Track/2.AudioTrack Looping"
            android:screenOrientation="portrait">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>


        <!-- //////////////////////////////////////////////////////////////
                                  Soundpool
        //////////////////////////////////////////////////////////////-->
        <activity android:name="android.media.soundpool.SoundManagerActivity" 
            android:label="Audio/SoundManager">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>
        <activity android:name="android.media.soundpool.SoundManagerActivity2">
        </activity>

        <activity android:name="android.media.soundpool.SoundPoolActivity" 
            android:label="Audio/Soundpool">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>

        <!-- //////////////////////////////////////////////////////////////
                                  MediaPlayer
        //////////////////////////////////////////////////////////////-->
        <activity android:name="android.media.mediaplayer.MusicPlayerActivity" 
            android:label="Audio/Music player">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>
        <activity android:name="android.media.mediaplayer.PlayActivity" />


        <!-- //////////////////////////////////////////////////////////////
                                  MediaStore
        //////////////////////////////////////////////////////////////-->
        <activity android:name="android.media.mediastore.MediaStoreCameraActivity"
            android:screenOrientation="portrait"
            android:label="MediaStore/Simple Camera">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>
        <activity android:name="android.media.mediastore.MediaStoreActivity" 
            android:label="MediaStore/Audio Recorder"
            android:screenOrientation="portrait">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="kr.thinkbee.android.media.examples" />
            </intent-filter>
        </activity>        
        

    </application>
    
</manifest>
